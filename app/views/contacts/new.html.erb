<header class="home-page">
  <div class="top">
      <a href="/" class="button btn-back" ><%=t :btn_back%></a>
      <a href="/learn_more" class="button btn-host" ><%=t :btn_learn%></a>
  </div>
  <div class="contact-form center" >
    <div class="content">

      <div class="title">
        <h3><%=t :become%></h3>
        <p><%=t :become_1%> <br>
          <%=t :become_2%></p>
      </div>

      <div class="form-div form-container">
        <%= simple_form_for @contact, :html => {:class => 'form' } do |f| %>
          <%=f.input :name, :required => true, :placeholder =>  I18n.t('form_1'), label: false, wrapper_html: { class: "form-div form-name" }, input_html: {class:"form-control", :id => "name"}%>
          <%= f.input :email, :required => true, :placeholder =>  I18n.t('form_2'), label: false, wrapper_html: { class: "form-div form-email" }, input_html: {class:"form-control", :id => "name"}%>
          <%= f.input :message, :as => :text, :required => true, :placeholder =>  I18n.t('form_3'), label: false, wrapper_html: { class: "form-div form-text" }, input_html: {class:"form-control", :rows => 6, :id => "message"}%>
          <%= f.button :submit, I18n.t('form_4') , :class=> "btn btn-primary"%>
        <% end %>
      </div>

    </div>
  </div>

    <div class="bottom">
      <div class="bottom-aligner"></div>
      <p> main@ezycities.com | Copyright &copy; 2016 <br><%=t :copy%></p>
    </div>
</header>
